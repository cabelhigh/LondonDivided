<p id="notice"><%= notice %></p>

<h1>Contracts</h1>
<%= button_to 'New Contract', new_contract_path, method: :get %>

<table class="table">
  <thead>
    <tr>
      <th>Money output</th>
      <th>Name</th>
      <th>Upkeep</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.money_output %></td>
        <td><%= contract.name %></td>
        <td><%= contract.format_upkeep %> minutes</td>
        <td><%= link_to 'Show', contract %></td>
        <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
        <td><%= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
