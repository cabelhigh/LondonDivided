<p id="notice"><%= notice %></p>

<h1>Clues</h1>
<div style="display: inline-flex">
  <%= button_to 'New Clew', new_clue_path, method: :get %>
  <%= form_tag({:action => "index"}, {:method => :get}) do %>
  <%= hidden_field_tag(:search, "dw") %>
  <div class="">
    <%= submit_tag 'Show Only Wimberly Clues' %>
  </div>
  <% end %>
  <%= form_tag({:action => "index"}, {:method => :get}) do %>
  <%= hidden_field_tag(:search, "el") %>
  <div class="">
    <%= submit_tag 'Show Only Lewis Clues' %>
  </div>
  <% end %>
  <%= form_tag({:action => "index"}, {:method => :get}) do %>
  <%= hidden_field_tag(:search, "hu") %>
  <div class="">
    <%= submit_tag 'Show Only University Clues' %>
  </div>
  <% end %>
  <%= form_tag({:action => "index"}, {:method => :get}) do %>
  <%= hidden_field_tag(:search, "th") %>
  <div class="">
    <%= submit_tag 'Show Only Humphreys Clues' %>
  </div>
  <% end %>

</div>
<div style="display: inline-flex">
  <%= form_tag({:action => "index"}, {:method => :get}) do %>
  <%= hidden_field_tag(:search, "1") %>
  <div class="">
    <%= submit_tag 'Show Only 1-Point Clues' %>
  </div>
  <% end %>
  <%= form_tag({:action => "index"}, {:method => :get}) do %>
  <%= hidden_field_tag(:search, "2") %>
  <div class="">
    <%= submit_tag 'Show Only 2-Point Clues' %>
  </div>
  <% end %>
  <%= form_tag({:action => "index"}, {:method => :get}) do %>
  <%= hidden_field_tag(:search, "3") %>
  <div class="">
    <%= submit_tag 'Show Only 3-Point Clues' %>
  </div>
  <% end %>

</div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Day</th>
      <th>Clue Subject</th>
      <th>Points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clues.each do |clue| %>
      <tr>
        <td><%= clue.name %></td>
        <td><%= clue.description %></td>
        <td><%= clue.day %></td>
        <td><%= clue.clue_subject %></td>
        <td><%= clue.points %></td>
        <td><%= link_to 'Show', clue %></td>
        <td><%= link_to 'Edit', edit_clue_path(clue) %></td>
        <td><%= link_to 'Destroy', clue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
